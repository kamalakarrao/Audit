<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hksapps.audit.MainActivity">


    <TextView
        android:id="@+id/workarea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Work Area"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/serverroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:gravity="center"
        android:text="Server Room"
        android:textSize="24dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/electricalroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        android:layout_weight="1"
        android:gravity="center"
        android:text="Electrical Room"

        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/securityroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Security Room"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/upsroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="UPS Room"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/commonarea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Common Area"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/hubroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Hub Room"
        android:textSize="24dp" />


    <Button
        android:id="@+id/export"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:text="Export"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>



